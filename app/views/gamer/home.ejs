	<script>
		var recentData = {
			labels: ["Jogados \nrecentes"],
			datasets: [{
				label: 'Jogo 1',
				backgroundColor: getRandomColor(),
				borderWidth: 1,
				data: [ 167 ]
			}, {
				label: 'Jogo 2',
				backgroundColor: getRandomColor(),
				data: [ 50 ]
			}, {
				label: 'Jogo 3',
				backgroundColor: getRandomColor(),
				data: [ 20 ]
			}, {
				label: 'Jogo 4',
				backgroundColor: getRandomColor(),
				data: [ 7 ]
			}]

		};

		var top5Data = {
			labels: ["Jogos"],
			datasets: [{
				label: 'Jogo 1',
				backgroundColor: getRandomColor(),
				borderWidth: 1,
				data: [ 927 ]
			}, {
				label: 'Jogo 2',
				backgroundColor: getRandomColor(),
				data: [ 800 ]
			}, {
				label: 'Jogo 3',
				backgroundColor: getRandomColor(),
				data: [ 750 ]
			}, {
				label: 'Jogo 4',
				backgroundColor: getRandomColor(),
				data: [ 233 ]
			}, {
				label: 'Jogo 5',
				backgroundColor: getRandomColor(),
				data: [ 154 ]
			}]

		};

		window.onload = function() {
			var recentChart = document.getElementById('recent').getContext('2d');
			window.a = new Chart(recentChart, {
				type: 'bar',
				data: recentData,
				options: {
					// Elements options apply to all of the options unless overridden in a dataset
					// In this case, we are setting the border of each horizontal bar to be 2px wide
					elements: {
						rectangle: {
							borderWidth: 2,
						}
					},
					responsive: true,
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true,
								// Inclui a °C para o gráfico de Temperatura
								callback: function(value) {
									return value + ' h';
								}
							}
						}]
					}
				}
			});
			var top5Chart = document.getElementById('top5Chart').getContext('2d');
			window.b = new Chart(top5Chart, {
				type: 'bar',
				data: top5Data,
				options: {
					// Elements options apply to all of the options unless overridden in a dataset
					// In this case, we are setting the border of each horizontal bar to be 2px wide
					elements: {
						rectangle: {
							borderWidth: 2,
						}
					},
					responsive: true,
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true,
								// Inclui a °C para o gráfico de Temperatura
								callback: function(value) {
									return value + ' h';
								}
							}
						}]
					}
				}
			});

		};

		function getRandomColor() {
			var letters = '0123456789ABCDEF';
			var color = '#';
			for (var i = 0; i < 6; i++) {
				color += letters[Math.floor(Math.random() * 16)];
			}
			return color;
		}
	</script>
