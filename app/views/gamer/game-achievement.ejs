<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>WPLAYER - STARTER PAGE</title>

	<!-- Main Styles -->
	<link rel="stylesheet" href="../../../assets/styles/style.min.css">
	
	<!-- Themify Icon -->
	<link rel="stylesheet" href="../../../assets/fonts/themify-icons/themify-icons.css">

	<!-- mCustomScrollbar -->
	<link rel="stylesheet" href="../../../assets/plugin/mCustomScrollbar/jquery.mCustomScrollbar.min.css">

	<!-- Waves Effect -->
	<link rel="stylesheet" href="../../../assets/plugin/waves/waves.min.css">

	<!-- Sweet Alert -->
	<link rel="stylesheet" href="../../../assets/plugin/sweet-alert/sweetalert.css">
	
</head>

<body>
<%- include('../include/gamer/sidebar') -%>

<div class="fixed-navbar">
	<div class="pull-left">
		<button type="button" class="menu-mobile-button glyphicon glyphicon-menu-hamburger js__menu_mobile"></button>
		<h1 class="page-title">Conquistas do <%= information.gameDetails.APP_NAME%></h1>
		<!-- /.page-title -->
	</div>
	<!-- /.pull-left -->
	<div class="pull-right">
		<a href="../../../logout" class="ico-item fa fa-sign-out"></a>
	</div>
</div>
<!-- /.fixed-navbar -->
<div id="wrapper" style="background-image: url(https://steamcdn-a.akamaihd.net/steam/apps/1000290/page_bg_generated_v6b.jpg?t=1559527510)">
	<div class="main-content">
		<div class="row small-spacing">
			<div class="col-lg-8 col-md-6">
				<div class="box-contact">
					<img src="  <%= information.gameDetails.GAME_IMG%>" alt="" class="avatar">
					<h3 class="name margin-top-10"><%= information.gameDetails.APP_NAME%></h3>
					<!-- /.name -->
					<h4 class="job"><%= information.gameDetails.FORMATED_PRICE%></h4>
					<!-- /.job -->
					<div class="text">
						<h3>
							Descrição
						</h3>
						<p class="margin-bottom-20">
                            <%= information.gameDetails.DESCRIPTION%>
						</p>
						<ul class="contact-social list-inline">
							<% for( genres of information.gameDetails.GENRES) {%>
								<span class="notice notice-blue"><%= genres%></span>
							<% } %>
						</ul>
					</div>
				</div>
				<!-- /.box-contact -->
			</div>
			<div class="col-lg-4 col-xs-12">
				<div class="box-content">
					<h4 class="box-title">Sua porcentagem de conquistas</h4>
					<!-- /.dropdown js__dropdown -->
					<div class="text-center">
						<div class="knob-wrap">
							<input class="knob" data-width="250" data-height="300" data-bgColor="#ebeff2" data-fgColor="#5555ff" data-readOnly=true data-thickness=".4" value="<%= information.gameDetails.TOTAL_PERCENT_COMPLETED%>"  />
						</div>
						<!-- .knob-wrap -->
					</div>
				</div>
				<!-- /.box-content -->
			</div>
			<div class="col-lg-12 col-md-6 col-xs-12">
				<div class="box-content">
					<div class="float-left">
						<h2>Conquistas</h2>
					</div>
				</div>
				<!-- /.box-content -->
			</div>
            <%for (conquista of information.achievements){%>
                <div class="col-lg-12 col-md-6 col-xs-12">
                    <a src="#">
                        <div class="box-content bg-<%= conquista.COMPLETED %> text-white">
                            <div class="statistics-box with-icon">
                                <img src="<%= conquista.ACHIEVEMENT_IMG %>" alt="" class="ico box avatar">
                                <p class="text-white h2"><%= conquista.ACHIEVEMENT_NAME %></p>
                                <p class="text-white"><%= conquista.ACHIEVEMENT_DESCRIPTION %></p>
                            </div>
                        </div>
                        <!-- /.box-content -->	
                    </a>
                </div>
            <% }%>
		</div>
	</div>
	<!-- /.main-content -->

</div>
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="../../../assets/scripts/jquery.min.js"></script>
	<script src="../../../assets/scripts/modernizr.min.js"></script>
	<script src="../../../assets/plugin/bootstrap/js/bootstrap.min.js"></script>
	<script src="../../../assets/plugin/mCustomScrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
	<script src="../../../assets/plugin/nprogress/nprogress.js"></script>
	<script src="../../../assets/plugin/sweet-alert/sweetalert.min.js"></script>
	<script src="../../../assets/plugin/waves/waves.min.js"></script>
	<!-- Sparkline Chart -->
	<script src="../../../assets/plugin/chart/sparkline/jquery.sparkline.min.js"></script>
	<script src="../../../assets/scripts/chart.sparkline.init.min.js"></script>
	<!-- Jquery Knob -->
	<script src="../../../assets/plugin/knob/jquery.knob.min.js"></script>
	<script src="../../../assets/scripts/jquery.knob.init.js"></script>

	<script src="../../../assets/scripts/main.min.js"></script>
</body>
</html>